@page
@model OrchidSellerClient.Pages.OrchidPages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Orchid</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Orchid.OrchidId" />
            <div class="form-group">
                <label asp-for="Orchid.IsNatural" class="control-label"></label>
                <input asp-for="Orchid.IsNatural" class="form-control" />
                <span asp-validation-for="Orchid.IsNatural" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orchid.OrchidDescription" class="control-label"></label>
                <input asp-for="Orchid.OrchidDescription" class="form-control" />
                <span asp-validation-for="Orchid.OrchidDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orchid.OrchidName" class="control-label"></label>
                <input asp-for="Orchid.OrchidName" class="form-control" />
                <span asp-validation-for="Orchid.OrchidName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orchid.Price" class="control-label"></label>
                <input asp-for="Orchid.Price" class="form-control" />
                <span asp-validation-for="Orchid.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orchid.CategoryId" class="control-label"></label>
                <select asp-for="Orchid.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="Orchid.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Upload Image</label>
                <input type="file" name="ImageFile" class="form-control" />
                <img src="@(string.IsNullOrEmpty(Model.Orchid.OrchidUrl) ? "/images/no-image.png" : Model.Orchid.OrchidUrl)"
                     alt="Orchid Image"
                     style="max-width: 100px; max-height: 100px;" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
