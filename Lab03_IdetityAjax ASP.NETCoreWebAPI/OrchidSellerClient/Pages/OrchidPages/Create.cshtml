@page
@model OrchidSellerClient.Pages.OrchidPages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Orchid</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <input asp-for="IsNatural" class="form-check-input" type="checkbox" />
                <label asp-for="IsNatural" class="form-check-label"></label>
                <span asp-validation-for="IsNatural" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orchid.OrchidDescription" class="control-label"></label>
                <input asp-for="Orchid.OrchidDescription" class="form-control" />
                <span asp-validation-for="Orchid.OrchidDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orchid.OrchidName" class="control-label"></label>
                <input asp-for="Orchid.OrchidName" class="form-control" />
                <span asp-validation-for="Orchid.OrchidName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orchid.Price" class="control-label"></label>
                <input asp-for="Orchid.Price" class="form-control" />
                <span asp-validation-for="Orchid.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orchid.CategoryId" class="control-label"></label>
                <select asp-for="Orchid.CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label>Upload Image</label>
                <input type="file" name="ImageFile" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
