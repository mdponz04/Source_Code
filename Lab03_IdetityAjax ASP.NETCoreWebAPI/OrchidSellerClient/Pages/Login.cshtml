@page
@model OrchidSellerClient.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Account.Email"></label>
        <input asp-for="Account.Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Account.Password"></label>
        <input asp-for="Account.Password" type="password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>
